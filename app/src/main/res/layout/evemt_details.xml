<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/event_details_location"
            style="@style/EventText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/event_details_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="New York, NY" />

        <TextView
            android:id="@+id/event_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2015.12.12" />

        <TextView
            android:id="@+id/event_details_description"
            android:layout_width="0dp"
            style="@style/EventText"
            android:layout_height="wrap_content"
            android:textColor="@color/description"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/event_details_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Please have your ID with you"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>